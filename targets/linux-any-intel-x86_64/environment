if envIsBuild ; then
  # Compilers 
  envSet CPP cpp
  envSet CC icc -m64
  envSet CXX icpc -m64
  envSet FC ifort -m64
  envSet LD ld

  # Compiler flags
  envSet CPPFLAGS
  envSet CFLAGS -O2 -g
  envSet CXXFLAGS -O2 -g
  envSet FFLAGS -O2 -g
  envSet LDFLAGS 
  envSet LIBS
fi

