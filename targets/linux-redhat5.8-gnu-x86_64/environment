if envIsBuild ; then
  # Compilers 
  envSet CPP cpp
  envSet CC gcc
  envSet CXX g++
  envSet FC gfortran
  envSet LD ld

  # Compiler flags
  envSet CPPFLAGS
  envSet CFLAGS -O3 -m64 -g
  envSet CXXFLAGS -O3 -m64 -g
  envSet FFLAGS -O3 -m64 -g
  envSet LDFLAGS 
fi

