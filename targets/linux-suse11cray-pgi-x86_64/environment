if envIsBuild ; then
  # Compilers 
  envSet CPP cpp
  envSet CC pgcc
  envSet CXX pgCC
  envSet F77 pgf77
  envSet F90 pgf90
  envSet FC pgf90
  envSet LD ld

  # Compiler flags
  envSet CPPFLAGS
  envSet CFLAGS -O2 -m64 -g
  envSet CXXFLAGS -O2 -m64 -g
  envSet FFLAGS -O2 -m64 -g
  envSet LDFLAGS
fi
# EOF
